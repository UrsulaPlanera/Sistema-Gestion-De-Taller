@model SistemaGestionDeTaller.Areas.Main.Models.Data

@{
    ViewData["Title"] = "Data";
}

<p class="display-6">Datos del taller</p>

@if(Model != null)
{
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Street)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Street)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Number)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Number)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Locality)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Locality)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Cp)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Cp)</dd>
    </dl>
}

<div>
    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#dataModify">
        <i class="bi bi-gear" style="color: #fff;"></i>
        @if(Model == null)
        {
            <span style="color: #fff;">AÑADIR</span>
        }
        else
        {
            <span style="color: #fff;">MODIFICAR</span>
        }
    </button>

    <div class="modal fade" id="dataModify" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="dataModifyLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="dataModifyLabel">Modificar datos</h1>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
                <div class="modal-body">
                    <form method="post">
                        <div class="mb-3 d-flex flex-column">
                            <label asp-for="Street" class="control-label"></label>
                            <input type="text" asp-for="Street" />
                            <span asp-validation-for="Street" class="validation-text"></span>
                        </div>
                        <div class="mb-3 d-flex flex-column">
                            <label asp-for="Number" class="control-label"></label>
                            <input type="number" asp-for="Number" />
                            <span asp-validation-for="Number" class="validation-text"></span>
                        </div>
                        <div class="mb-3 d-flex flex-column">
                            <label asp-for="Locality" class="control-label"></label>
                            <input type="text" asp-for="Locality" />
                            <span asp-validation-for="Locality" class="validation-text"></span>
                        </div>
                        <div class="mb-3 d-flex flex-column">
                            <label asp-for="Cp" class="control-label"></label>
                            <input type="number" asp-for="Cp" />
                            <span asp-validation-for="Cp" class="validation-text"></span>
                        </div>
                        <button type="submit" class="btn w-100" style="color: #fff; background-color: #A6DF98;" asp-action="ChangeData">Guardar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}