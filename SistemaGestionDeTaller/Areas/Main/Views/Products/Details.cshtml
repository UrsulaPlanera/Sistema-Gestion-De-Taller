@model SistemaGestionDeTaller.Areas.Main.Models.Product

@{
    ViewData["Title"] = "Details";
}

<p class="display-6">Detalles</p>

<div class="my-3">
    <a class="btn py-1 btn-secondary" asp-action="Index">
        <i class="bi bi-box-arrow-in-left" style="color: #fff;"></i>
        Regresar
    </a>

    <a class="btn py-1" style="background-color: #A6DF98; color: #fff;" asp-action="Edit" asp-route-id="@Model.Id">
