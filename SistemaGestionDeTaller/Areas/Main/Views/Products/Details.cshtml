    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.InvestmentPrice)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.SalePrice)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.SalePrice)
    </dd>
    <dt class = "col-sm-2">
